<header>
  <h2 class="visually-hidden">Top level navigation menu</h2>
  <nav>
    <ul>
      <li>
        <a href="/">{{ metadata.title }}</a>
      </li>
      {%- for entry in collections.all | eleventyNavigation %}
        <li>
          <a href="{{ entry.url }}"{% if entry.url == page.url %} class="active" aria-current="page"{% endif %}>{{ entry.title }}</a>
        </li>
      {%- endfor %}
    </ul>
  </nav>
</header>