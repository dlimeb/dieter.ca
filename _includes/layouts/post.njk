---
layout: base
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <ul class="post-metadata">
      <li><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
      <li>
        <ul class="tags-list">
          {%- for tag in tags | filterTagList %}
            {%- set tagUrl %}/tag/{{ tag | slugify }}/{% endset %}
            <li>
              <a href="{{ tagUrl }}">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
          {%- endfor %}
        </ul>
      </li>
    </ul>
  </header>

  <div class="content">
    {{ content | safe }}
  </div>
</article>